<base:BaseEditor x:Class="Dru.StrideLiveEditor.DataTypeEditors.BooleanEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dru.StrideLiveEditor.DataTypeEditors"
             xmlns:base="clr-namespace:Dru.StrideLiveEditor.DataTypeEditors"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="PropertyName" Text="" Grid.Column="0" VerticalAlignment="Center" />
        <CheckBox x:Name="Value" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" />
    </Grid>
</base:BaseEditor>
